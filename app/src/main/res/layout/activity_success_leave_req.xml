<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:orientation="vertical"
    android:background="@color/Orange"
    tools:context="com.example.radhikakalaiselvan.cometcollaborate.SuccessLeaveReq">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your request has been sent to the professor ! Please wait for the professor to respond to your request."
        android:textSize="30sp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="90dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/welcomeNoteTV"
        android:textColor="@color/Green"
        />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/Green"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        />
</LinearLayout>
